<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bomcodigo.popmovies.ui.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_movie_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"/>

    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        android:layout_width="@dimen/progressbar_default_size"
        android:layout_height="@dimen/progressbar_default_size"
        android:layout_gravity="center"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/tv_no_data_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_data_available"
        android:layout_gravity="center"
        android:visibility="gone"
        android:textColor="@android:color/white"
        style="@style/Base.TextAppearance.AppCompat.Large"/>

</FrameLayout>
