<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/vertical_margin">

    <ImageView
        android:id="@+id/image_button_trailer"
        android:contentDescription="@string/button_trailer_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/button_play_size"
        android:layout_height="@dimen/button_play_size"
        android:src="@drawable/btn_play_trailer"
        android:scaleType="fitXY"
        android:clickable="true"/>

    <TextView
        android:id="@+id/tv_trailer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/image_button_trailer"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_button_trailer"
        android:maxLines="2"
        android:ellipsize="end"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:layout_marginStart="@dimen/horizontal_margin"/>

    <TextView
        android:id="@+id/tv_trailer_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/image_button_trailer"
        app:layout_constraintTop_toBottomOf="@+id/tv_trailer_name"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:layout_marginStart="@dimen/horizontal_margin"
        style="@style/Base.TextAppearance.AppCompat.Small"
        tools:text="Youtube"/>






</android.support.constraint.ConstraintLayout>